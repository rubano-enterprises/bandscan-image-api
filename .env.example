# Required: Service authentication token
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
BANDSCAN_API_TOKEN=your-secure-token-here

# Base URL for constructing URLs (include protocol, no trailing slash)
BASE_URL=https://your-domain.com

# Maximum upload file size in MB
MAX_FILE_SIZE_MB=10

# Thumbnail dimension in pixels
THUMBNAIL_SIZE=300

# Comma-separated allowed extensions
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Log level
LOG_LEVEL=INFO

# Google Sheets service account (for student requests)
# Either provide the JSON string or a file path
# GOOGLE_SERVICE_ACCOUNT_JSON={"type": "service_account", ...}
# GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account.json

# Firebase Cloud Messaging (for Android push notifications)
# Legacy server key from Firebase Console > Project Settings > Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key-here
# Or use service account (recommended)
# FCM_SERVICE_ACCOUNT_JSON={"type": "service_account", ...}
# FCM_SERVICE_ACCOUNT_FILE=/path/to/firebase-service-account.json

# Apple Push Notification Service (for iOS push notifications)
# Get these from Apple Developer Account > Certificates, Identifiers & Profiles > Keys
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_BUNDLE_ID=com.yourcompany.bandscan
APNS_KEY_FILE=/path/to/AuthKey_XXXXXXXXXX.p8
APNS_USE_SANDBOX=true
